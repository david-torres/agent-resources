{{#if missions.length}}
<div class="columns is-multiline">
  {{#each missions}}
  <div class="column is-4">
    <div class="card">
      <div class="card-content">
        <h3 class="is-size-4 has-text-weight-bold mb-3">{{this.name}}</h3>
        <p class="has-text-grey mb-2">
          <span class="icon-text is-size-7">
            <span class="icon"><i class="fas fa-calendar"></i></span>
            <span>{{date this.date "MMM D, YYYY"}}</span>
          </span>
        </p>
        {{#if this.outcome}}
        <p class="mb-2">
          <span class="tag {{#if (eq this.outcome 'success')}}is-success{{else if (eq this.outcome 'failure')}}is-danger{{else}}is-warning{{/if}}">
            {{this.outcome}}
          </span>
        </p>
        {{/if}}
        {{#if this.characters.length}}
        <p class="has-text-grey mb-3">
          <span class="icon-text is-size-7">
            <span class="icon"><i class="fas fa-users"></i></span>
            <span>{{this.characters.length}} character{{#unless (eq this.characters.length 1)}}s{{/unless}}</span>
          </span>
        </p>
        {{/if}}
        <a href="/missions/{{this.id}}" class="button is-primary is-fullwidth">
          View Mission Log
        </a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="box">
  {{#if q}}
    <div class="notification is-warning">
      No mission logs found matching "{{q}}"
    </div>
  {{else}}
    <div class="notification is-info">
      Type a mission name to search public mission logs
    </div>
  {{/if}}
</div>
{{/if}}
