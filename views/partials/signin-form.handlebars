<div id="auth-form">
  <h2 class="title is-4">Sign In</h2>
  <div class="mt-4">
    <button class="button is-dark" type="button" hx-on:click="App.signInWithDiscord()">
      <span class="icon">
        <i class="fa-brands fa-discord"></i>
      </span>
      <span>Sign in with Discord</span>
    </button>
  </div>
  <hr/>
  <form id="sign-in" method="POST" hx-on:submit="htmx.trigger('#sign-in', 'htmx:abort'); App.signIn(event);">
    <div class="field">
      <label class="label" for="sign-in-email">Email</label>
      <div class="control">
        <input id="sign-in-email" class="input" type="email" name="email" placeholder="Email" required>
      </div>
    </div>
    <div class="field">
      <label class="label" for="sign-in-password">Password</label>
      <div class="control">
        <input id="sign-in-password" class="input" type="password" name="password" placeholder="Password" required>
      </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <button class="button is-primary" type="submit">Sign In</button>
      </div>
      <div class="control">
        <button class="button is-link" type="button" hx-on:click="App.sendSignInLink(event)">Send Magic Link</button>
      </div>
    </div>
  </form>
  <p class="mt-4">
    Don't have an account?
    <a hx-get="/auth/signup-form" hx-target="#auth-form" hx-swap="outerHTML">Sign Up</a>
  </p>
</div>